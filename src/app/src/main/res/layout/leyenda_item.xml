<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/FondoLista"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="10dp"
        android:background="@drawable/esquinas_redondas"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/leyenda_imagen"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:src="@drawable/imagen_prueba"
            app:civ_border_color="@color/BackgroudGreen"
            app:civ_border_width="1dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/leyenda_nombre"
            android:layout_width="214dp"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:gravity="center"
            android:textColor="@color/BackgroudGreen"
            android:textSize="16sp"
            tools:text="Leyenda del patio de los leones" />
    </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>