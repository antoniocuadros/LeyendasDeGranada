<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/imagen_recorrido"
            android:layout_width="180dp"
            android:scaleType="centerCrop"
            android:layout_height="120dp"
            android:src="@drawable/imagen_prueba"
            android:padding="10dp"
        />

        <TextView
            android:id="@+id/texto_recorrido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagen_recorrido"
            android:layout_alignEnd="@+id/imagen_recorrido"

            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="39dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/BackgroudGreen"
            android:textSize="10dp"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>