<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/carta_imagen"
            android:layout_margin="10dp"

            >
            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/imagen_recorrido"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="120dp"
                android:src="@drawable/imagen_prueba"
                />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/texto_recorrido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/carta_imagen"

            android:layout_marginTop="1dp"

            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/texto_paradas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texto_recorrido"

            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="10dp"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>